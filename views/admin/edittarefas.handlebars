{{tarefa}}
<h3>Editar Tarefa:</h3>
<form action="/admin/tarefas/nova" method="POST">
    <label for="nome">Nome: </label>
    <input type="text" id="nome" name="nome" placeholder="nome da tarefa" class="form-control" value="{{tarefa.nome}}">
    <label for="descricao">Descricão</label>
    <input type="text" name="descricao" id="descricao" class="form-control" value="{{tarefa.descricao}}">
    <label for="prazo">Prazo:</label>
    <input type="date" name="prazo" id="prazo" class="form-control" value="{{tarefa.prazo}}">
    <input type="text" value="{{tarefa.prazo}}">
    <br>
    <label for="prioridade">Prioridade da tarefa:</label>
    <br>
    <input type="text" value="{{tarefa.prioridade}}">
    <input type="radio" name="prioridade" id="alta" value="{{tarefa.prioridade}}" > Alta
    <input type="radio" name="prioridade" id="media" value="{{tarefa.prioridade}}" > Média
    <input type="radio" name="prioridade" id="baixa" value="{{tarefa.prioridade}}"> Baixa
    <br><br>
    <label for="concluida">Status de conclusão:</label>
    <br>
    <input type="radio" name="concluida" id="concluida" value="Concluida"> Concluida
    <input type="radio" name="concluida" id="emProcesso" value="Em Processo"> Em processo
    <input type="radio" name="concluida" id="naoConcluida" value="Não Concluida"> Não Concluida
    <br><br>
    <button type="submit" class="btn btn-success">Editar Tarefa</button>

</form>